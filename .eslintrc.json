{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint", "no-loops"],
  "rules": {
    "no-loops/no-loops": 2,
    "semi": ["error", "never"],
    "quotes": ["error", "single"]
  }
}
