{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"]
  },
  "include": ["src/**/*.mts"],
  "exclude": [
    "__tests__",
    "coverage",
    "node_modules",
    "storybook-static",
    "eslint.config.mjs",
    "**/jest.config.ts",
    "**/jest.setup.mts",
    "**/jest.setup.ts",
    "**/*.test.mts",
    "**/*.test.ts",
    "**/*.test.integration.mts",
    "**/*.test.integration.ts"
  ]
}
