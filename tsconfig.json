{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "types": ["node", "jest"],
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": false,
  "exclude": ["__tests__/**/*.(spec|test).mts", "dist/**/*", "**/*.(spec|test).mts"],
  "ts-node": { "esm": true },
  "files": ["./src/index.mts"]
}
