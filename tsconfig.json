{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": ["ES2024"],
    "listEmittedFiles": false,
    "listFiles": false,
    "target": "ES2024",
    "module": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "traceResolution": false,
    "types": ["node", "jest"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
