{
  "compilerOptions": {
    // "allowJs": true,
    "allowSyntheticDefaultImports": true,
    // "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "pretty": true,
    "resolveJsonModule": true,
    // "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "traceResolution": false,
    "types": ["node", "jest"]
  },
  "compileOnSave": false,
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "jest.config.ts"]
}
