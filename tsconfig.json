{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "traceResolution": false
  },
  "include": ["src/**/*.mts"],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/jest.setup.mts",
    "**/jest.setup.ts",
    "**/*.test.mts",
    "**/*.test.ts",
    "**/*.test.integration.mts",
    "**/*.test.integration.ts"
  ]
}
