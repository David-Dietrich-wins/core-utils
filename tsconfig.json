{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "file:///home/ddietrich/src/core-utils/src",
    "strict": true,
    "target": "esnext",
    "traceResolution": false,
    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.mts"],
  "exclude": [
    "__tests__",
    "coverage",
    "node_modules",
    "storybook-static",
    "eslint.config.mjs",
    "**/jest.config.ts",
    "**/jest.setup.mts",
    "**/jest.setup.ts",
    "**/*.test.mts",
    "**/*.test.ts",
    "**/*.test.integration.mts",
    "**/*.test.integration.ts"
  ]
}
